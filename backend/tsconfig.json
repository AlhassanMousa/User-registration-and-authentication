{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./disc",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules"],
      "@config/*": ["config"],
      "@shared/*": ["shared"]
    }
  }
}
